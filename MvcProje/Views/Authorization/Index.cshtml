@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Kullanıcı Mail</th>
            <th>Yetki</th>
            <th>Status</th>
            <th>Pasif Yap</th>
            <th>Yetkisini Değiştir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.AdminID</th>
                <td>@item.AdminUsername</td>
                <td>@item.AdminRole</td>
                <td>Aktif</td>
                <td><a href="/Authorization/Update/@item.AdminID" class="btn btn-warning">Pasif Yap</a></td>
                <td><a href="/Authorization/Update/@item.AdminID" class="btn btn-danger">Yetkisini Değiştir</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Authorization/Create" class="btn btn-success">Yeni Admin Tanımla</a>
